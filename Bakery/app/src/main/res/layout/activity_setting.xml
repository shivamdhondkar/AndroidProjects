<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/brown"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="@string/settings"
        android:textColor="@color/white"
        android:textSize="16sp" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/setting" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardBackgroundColor="@color/light_grey"
        app:cardCornerRadius="20sp"
        app:cardElevation="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:paddingLeft="25sp"
                android:text="Account"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_privacy"
                    android:layout_width="22sp"
                    android:layout_height="22sp"
                    android:src="@drawable/icon_privacy" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aclonica"
                    android:paddingLeft="10sp"
                    android:text="Privacy"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_change_number"
                        android:layout_width="22sp"
                        android:layout_height="22sp"
                        android:src="@drawable/icon_number_change" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonica"
                        android:paddingLeft="10sp"
                        android:text="Change Number"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_delete_account"
                        android:layout_width="22sp"
                        android:layout_height="22sp"
                        android:src="@drawable/icon_delete" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/aclonica"
                        android:paddingLeft="10sp"
                        android:text="Delete my account"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardBackgroundColor="@color/light_grey"
        app:cardCornerRadius="20sp"
        app:cardElevation="20sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7sp"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">
            <ImageView
                android:layout_width="23sp"
                android:layout_height="23sp"
                android:id="@+id/img_profile"
                android:src="@drawable/icon_uname"
                />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:id="@+id/tv_profile"
            android:paddingLeft="25sp"
            android:text="My Profile"
            android:textSize="20sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
