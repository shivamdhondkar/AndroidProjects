<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CupCakeActivity"
    android:orientation="vertical"
    android:background="@drawable/bcg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="!! Cupcakes Special !!"
        android:textColor="@color/brown"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:layout_marginTop="10sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            app:cardCornerRadius="25sp"
            app:cardElevation="20sp"
            android:layout_margin="15sp"
            app:cardBackgroundColor="@color/light_grey">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chocolate"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:background="@color/light_sky_blue"
                android:gravity="center"/>
            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:id="@+id/img_chocolate_cupcake"
                android:src="@drawable/cup_removebg_preview"
                android:layout_gravity="center"
                android:layout_marginBottom="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65sp"
                android:text="Price : 40/-"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="12sp"
                android:fontFamily="@font/aclonica"
                android:paddingLeft="15sp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            app:cardCornerRadius="25sp"
            app:cardElevation="20sp"
            android:layout_margin="15sp"
            app:cardBackgroundColor="@color/light_grey">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vanilla"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/brown"
                android:background="@color/light_sky_blue"
                android:gravity="center"/>
            <ImageView
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:id="@+id/img_vanilla_cupcake"
                android:src="@drawable/vanilla_removebg_preview"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="65sp"
                android:text="Price : 40/-"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="12sp"
                android:fontFamily="@font/aclonica"
                android:paddingLeft="15sp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_gravity="center"
        app:cardCornerRadius="25sp"
        app:cardElevation="20sp"
        android:layout_margin="15sp"
        app:cardBackgroundColor="@color/light_grey">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pineapple"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/brown"
        android:background="@color/light_sky_blue"
        android:gravity="center"/>
        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/img_pineapple_cupcake"
            android:src="@drawable/pineapple"
            android:layout_gravity="center"
            android:layout_marginBottom="10sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120sp"
            android:text="Price : 40/-"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="12sp"
            android:fontFamily="@font/aclonica"
            android:paddingLeft="15sp"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>