<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextToSpeechFragment"
    android:orientation="vertical"
    android:background="@drawable/background_shape">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Text to Speech"
    android:textStyle="bold"
    android:textSize="25sp"
    android:textColor="@color/black"
    android:gravity="center"
    android:layout_marginTop="30sp"
    android:fontFamily="@font/aclonica"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:id="@+id/et_enter_your_text"
        android:hint="Enter your text"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColorHint="@color/white"
        android:fontFamily="@font/aclonica"
        android:inputType="textMultiLine"
        android:gravity="center"
        android:padding="10sp"
        android:background="@drawable/text_view_arc"
        android:layout_margin="25sp"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Change the pitch"
    android:textColor="@color/black"
    android:textStyle="bold|italic"
    android:fontFamily="@font/aclonica"
    android:textSize="16sp"
    android:layout_margin="10sp"
    />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:min="0"
        android:progress="50"
        android:progressTint="@color/red"
        android:progressBackgroundTint="@color/black"
        android:thumb="@drawable/icon_heart"
        android:id="@+id/sb_text_to_speech_pitch"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change the speed"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:fontFamily="@font/aclonica"
        android:textSize="16sp"
        android:layout_margin="10sp"
        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:min="0"
        android:progress="50"
        android:id="@+id/sb_text_to_speech_speed"
        android:progressBackgroundTint="@color/black"
        android:progressTint="@color/red"
        android:thumbTint="@color/black"
        android:thumb="@drawable/icon_heart"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak"
        android:textSize="20sp"
        android:id="@+id/btn_text_to_speech_speak"
        android:textStyle="italic|bold"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:layout_marginTop="15sp"
        android:layout_gravity="center"/>
</LinearLayout>