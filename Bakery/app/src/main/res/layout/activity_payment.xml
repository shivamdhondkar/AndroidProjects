<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OrderNowFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="!Welcome to Payment Section!"
            android:textStyle="bold"
            android:textSize="15sp"
            android:fontFamily="@font/aclonica"
            android:textAlignment="center"
            android:textColor="@color/brown"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10sp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10sp"
                app:cardElevation="10sp"
                app:cardBackgroundColor="@color/light_sky_blue"
                android:layout_marginTop="80sp"
                android:layout_margin="20sp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/fragemnt_add_to_cart"
                        android:text="Cash On Delivery"
                        android:fontFamily="@font/aclonica"
                        android:textSize="20sp"
                        android:textColor="@color/brown"
                        android:background="@color/light_grey"
                        android:textStyle="bold"
                        android:gravity="center"
                        />
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:id="@+id/lottie_cash_on_delivery"
                        app:lottie_rawRes="@raw/lottie_cash_on_delivery"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="10sp"
                app:cardCornerRadius="10sp"
                app:cardBackgroundColor="@color/light_sky_blue"
                android:layout_marginTop="30sp"
                android:layout_margin="20sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_fragment_online"
                        android:text="Online Payment"
                        android:textStyle="bold"
                        android:textColor="@color/brown"
                        android:background="@color/light_grey"
                        android:textSize="20sp"
                        android:fontFamily="@font/aclonica"
                        android:gravity="center"/>
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="200sp"
                        android:layout_height="200sp"
                        android:layout_gravity="center"
                        android:id="@+id/lottie_online"
                        app:lottie_rawRes="@raw/lottie_online_payment"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </FrameLayout>
</ScrollView>