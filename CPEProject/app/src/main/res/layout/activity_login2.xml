<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5AC6F6"
    android:orientation="vertical"
    tools:context=".LoginActivity2">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/lottie"
        app:lottie_rawRes="@raw/getlottie"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:elevation="5dp"
        android:layout_marginLeft="100dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_login_cardinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="#FAF5F5"
        app:cardCornerRadius="20sp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_login_cardtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#03A9F4"
                android:fontFamily="@font/antic_didone"
                android:text="Login  "
                android:textAlignment="center"
                android:textColor="#020B00"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="5dp"
                android:fontFamily="@font/antic_didone"
                android:hint="Username"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="20sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="5dp"
                android:fontFamily="@font/antic_didone"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="20sp"
                android:textStyle="bold" />
            <CheckBox
                android:id="@+id/chk_login_show_hide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/antic_didone"
                android:text="Show Password"
                android:textSize="15sp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btn_login_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-5sp"
                android:backgroundTint="#03A9F4"
                android:fontFamily="@font/antic_didone"
                android:text="Login"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_login_new_user"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/antic_didone"
                android:text="New User/Register Here"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_login_terms_and_condition"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="-15sp"
                android:fontFamily="@font/antic_didone"
                android:text="Terms &amp; Condition"
                android:textSize="18dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_login_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-5sp"
                android:backgroundTint="#03A9F4"
                android:fontFamily="@font/antic_didone"
                android:text="Login with Google"
                android:textSize="20sp" />




        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_login_sing_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/antic_didone"
        android:text=" or Login with "
        android:layout_marginBottom="20sp"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="45sp"
            android:layout_height="50sp"
            android:layout_marginStart="115sp"
            android:src="@drawable/google"
            android:id="@+id/img_google_logo"
            />


        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="90dp"
            android:src="@drawable/twitter"
            android:id="@+id/img_twitter_logo"

            />



    </LinearLayout>

</LinearLayout>

