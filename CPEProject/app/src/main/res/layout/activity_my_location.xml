<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyLocationActivity" >


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mylocation_satellite"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Satellite"
            android:fontFamily="@font/antic_didone"
            android:textColor="#000C01"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mylocation_terrain"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Terrain"
            android:textColor="#000700"
            android:fontFamily="@font/antic_didone"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mylocation_hybrid"
            android:text="Hybrid"
            android:fontFamily="@font/antic_didone"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000C01"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mylocation_normal"
            android:fontFamily="@font/antic_didone"
            android:text="Normal"
            android:textSize="15dp"
            android:textColor="#000E01"
            android:textStyle="bold"
            />

    </LinearLayout>


    </RelativeLayout>